@model IEnumerable<QuanlyCV.Models.Note>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="body-folder-Manager" style="margin-bottom: 10px;">
    <div class="container">
        <div class="row" style="flex-direction: row;display: flex;">
            <div class="col-lg-5 col-md-12 col-sm-12 col-xs-12">
                <div class="sale-statistic-inner notika-shadow">
                    <div class="curved-inner-pro text-center">
                        <div style="padding: 20px 0px;">
                            <span style="font-size: 20px; color:#909090;font-weight: bold;">Danh Sách Ghi CHú</span>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div id="sidebar-wrapper" class="sidebar-toggle kehoach" style="overflow: scroll; overflow-x:hidden;background-color: #00bcd4">
                            <ul class="sidebar-nav">
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <a class="li-menu-left active" id="li-menu-left-one" onclick="setActiveMenuleft(this)">
                                            <div class="sidebar-left" style="padding: 10px;">
                                                <div class="p-center">
                                                    <p class="p-center-content-title">@item.NoteContent</p>
                                                </div>
                                                <div class="p-center">
                                                    <p class="p-center-title">Thời Gian: </p>
                                                    <p class="p-center-content">18/10/2018</p>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="btn-action-bottom-left">
                            <a class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center btn-add-menu-left" href="#" onclick="openModalAddPlan()" title="Thêm" style="padding: 10px;background-color: #00bcd4;color: #fff">Thêm</a>
                        </div>
                        <div id="modalAddPlan" class="modal">
                            <!-- Modal content -->
                            <div class="modal-content">
                                <span class="closeModalAddPlan">&times;</span>
                                <br />
                                <br />
                                <form>
                                    <span>Tên kế hoạch</span>
                                    <input type="text" name="" required="required" style="width: 100% ;border: none;background-color: #c1c1c1">
                                    <span>Thời gian</span>
                                    <input type="date" name="" required="required" style="width: 100%;border: none;background-color: #c1c1c1">
                                    <span>Trạng thái</span>
                                    <select name="" id="input" class="form-control" required="required" style="width: 100%;border: none;background-color: #c1c1c1">
                                        <option value="">Đang hoạt động</option>
                                        <option value="">Chưa hoạt động</option>
                                        <option value="">Đã hoạt động</option>
                                    </select>
                                    <br />
                                    <input type="submit" name="" value="Thêm" style="background-color:#67b459 ;border: none;border-radius: 4px;color:#fff;padding: 5px">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-md-12 col-sm-12 col-xs-12" style="width: 900px; margin-top: 65px;background-color: #c1c1c1;border-radius: 4px;">
                <div style="margin-top:10px;padding: 10px;max-width: 100%">
                    <div class="btn-edit-delete" style="flex-direction: row;display: flex">
                        <a style="background-color:#00bcd4;color:#fff;padding:5px 10px;border: none;border-radius: 4px;" href="#">Sửa</a>
                        <a style="background-color:#eb5a46;color:#fff;padding:5px 10px;border: none;border-radius: 4px;" href="#">Xóa</a>
                    </div>
                    <div style="max-width: 100%;padding: 10px;overflow: auto;overflow-x: hidden;margin-top:10px;background-color: #fff;border-radius: 4px;max-height: 410px;height: 410px;">
                        <textarea style="border:none;max-width: 100%;max-height: 390px;height: 390px;"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

