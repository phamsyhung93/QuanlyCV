@model QuanlyCV.Models.Permission
@{
    ViewBag.Title = "ViewUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-grid">
    <div class="agile-grids">
        <!-- input-forms -->
        <div class="grids">
            <div class="progressbar-heading grids-heading">
                <h2>Cập Nhật Quyền</h2>
                <h4 style="color:darkred">@TempData["error"]</h4>
            </div>
            <div class="panel panel-widget forms-panel">
                <div class="forms">
                    <div class="form-grids widget-shadow" data-example-id="basic-forms">
                        <div class="form-title">
                            <h4>Cập Nhật Quyền</h4>
                            <br/>
                            <a onclick="BackPermissions()">Quay Về</a>
                        </div>
                        <div class="form-body">
                            <form method="post" onsubmit="UpdatePermissions(event)">
                                <input type="hidden" name="PermissionId" id="PermissionIdUpdate" value="@Model.PermissionId" />
                                <div class="form-group">
                                    <label for="ManagerZoneName">Tên Quyền</label>
                                    <input type="hidden" name="PermissionName" class="form-control" id="PermissionNameUpdate" placeholder="Tên chức vụ" value="@Model.PermissionName">
                                    <input type="text" name="" class="form-control" id="" placeholder="Tên chức vụ" disabled value="@Model.PermissionName">
                                </div>
                                <div class="form-group">
                                    <label for="ManagerZoneName">Tên Quyền Tiếng Việt</label>
                                    <input type="text" name="DisplayNameAction" class="form-control" id="DisplayNameActionUpdate" placeholder="Tên chức vụ" value="@Model.DisplayNameAction">
                                </div>
                                <div class="form-group">
                                    <label for="ManagerZoneName">Tên Khu Vực</label>
                                    <input type="hidden" name="ManagerZoneID" class="form-control" id="ManagerZoneIDUpdate" placeholder="Tên chức vụ" value="@Model.ManagerZoneID">
                                    <input type="text" name="" class="form-control" id="" placeholder="Tên chức vụ" disabled value="@Model.ManagerZoneID">
                                </div>
                                <div class="form-group">
                                    <label for="ManagerZoneStatus">Trạng thái</label>
                                    <select name="PermissionStatus" id="PermissionStatusUpdate" class="form-control">
                                        <option value="1" @(Model.PermissionStatus == 1 ? "selected" : "")>Hiện Thị</option>
                                        <option value="2" @(Model.PermissionStatus == 2 ? "selected" : "")>Không Hiển Thị</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-default w3ls-button">Cập nhật</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- //input-forms -->
    </div>
</div>

