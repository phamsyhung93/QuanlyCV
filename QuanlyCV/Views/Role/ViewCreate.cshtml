
<div class="main-grid">
    <div class="agile-grids">
        <!-- input-forms -->
        <div class="grids">
            <div class="progressbar-heading grids-heading">
                <h2>Thêm Mới Chức Vụ</h2>
                <h4 style="color:darkred">@TempData["error"]</h4>
            </div>
            <div class="panel panel-widget forms-panel">
                <a onclick="backRole(this)">Quay Về</a>
                <div class="forms">
                    <div class="form-grids widget-shadow" data-example-id="basic-forms">
                        <div class="form-title">
                            <h4>Thêm Mới Chức Vụ</h4>
                        </div>
                        <div class="form-body">
                            <form  method="post" onsubmit="CreateRole(event)">
                                <div class="form-group">
                                    <label for="rolename">Tên chức vụ</label>
                                    <input type="text" name="RoleName" class="form-control" id="RoleNameRole" placeholder="Tên chức vụ">
                                </div>
                                <div class="form-group">
                                    <label for="rolestatus">Trạng thái</label>
                                    <select name="RoleStatus" id="RoleStatusRole" class="form-control">
                                        <option value="0"><===== Chọn phòng trạng thái =====></option>
                                        <option value="1">Hiển Thị</option>
                                        <option value="2">Không Hiển Thị</option>
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-default w3ls-button">Xác Nhận</button>
                                <button type="reset" class="btn btn-default w3ls-button">Làm lại</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- //input-forms -->
    </div>
</div>

