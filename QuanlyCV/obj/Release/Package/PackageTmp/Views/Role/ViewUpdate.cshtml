@model QuanlyCV.Models.Role

<div class="main-grid">
    <div class="agile-grids">
        <!-- input-forms -->
        <div class="grids">
            <div class="progressbar-heading grids-heading">
                <h2>Sửa Thông Tin Chức Vụ</h2>
                <h4 style="color:darkred">@TempData["error"]</h4>
            </div>
            <div class="panel panel-widget forms-panel">
                <a onclick="backRole(this)">Quay Về</a>
                <div class="forms">
                    <div class="form-grids widget-shadow" data-example-id="basic-forms">
                        <div class="form-title">
                            <h4>Sửa Thông Tin Chức Vụ</h4>
                        </div>
                        <div class="form-body">
                            <form  method="post" onsubmit="updateRole(event)">
                                <input type="hidden" name="RoleId" id="RoleIdEdit" value="@Model.RoleId" />
                                <div class="form-group">
                                    <label for="rolename">Tên chức vụ</label>
                                    <input type="text" name="RoleName" class="form-control" id="RoleNameEdit" placeholder="Tên chức vụ" required value="@Model.RoleName">
                                </div>
                                <div class="form-group">
                                    <label for="rolestatus">Trạng thái</label>
                                    <select name="RoleStatus" id="RoleStatusEdit" class="form-control">
                                        <option value="1" @(Model.RoleStatus == 1 ? "selected" : "")>Hiển Thị</option>
                                        <option value="2" @(Model.RoleStatus == 2 ? "selected" : "")>Không Hiển Thị</option>
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-default w3ls-button">Cập nhật</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- //input-forms -->
    </div>
</div>


