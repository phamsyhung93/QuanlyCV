        });

        $('#image-gallery').lightSlider({
            gallery: true,
            item: 1,
            thumbItem: 9,
            slideMargin: 0,
            speed: 500,
            auto: true,
            loop: true,
            onSliderLoad: function () {
                $('#image-gallery').removeClass('cS-hidden');
            }
        });

        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            var ulli = document.getElementById("sub-parent");
            $(".parent").click(function () {
                if ($(this).prop("checked") == true) {
                    var className = ".phong-" + $(this).val();
                    $(className).css('display', "block");
                }
                else if ($(this).prop("checked") == false) {
                    var className = ".phong-" + $(this).val();
                    $(className).css('display', 'none');
                }
            });
        });


        function listProjectByProjectType1(e) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("loadlistProject", "Home")",
                data: { id: 1 },
                success: function (rps) {
                    $(".agile-grids").html(rps);
                }
            });
        }
        function chooseYear(e) {
            var year = $(e).data("id");
            $.ajax({
                type: "POST",
                url: "@Url.Action("loadlistProject", "Home")",
                data: { id: 2, year: year },
                success: function (rps) {
                    $(".agile-grids").html(rps);
                }
            });
            var modalListProject = document.getElementById('modal-list-project');
            modalListProject.style.display = "none";
        }

        function chooseProject(e) {
            var ProjectId = $(e).data("id");
            $.ajax({
                type: "POST",
                url: "@Url.Action("loadProgressWorking", "Home")",
                data: { ProjectId: ProjectId },
                success: function (rps) {
                    $("#progress-working").html(rps);
                }
            });
        }


        function addFolderByProject(e) {
            e.preventDefault();
            var FolderName = $("#FolderNameCreate").val();
            var FolderId = $("#FolderIdCreate").val();
            var ProjectId = $("#ProjectIdCreate").val();

            $.ajax({
                type: "POST",
                url: "@Url.Action("CreateFolderByProject","Home")",
                data: { FolderName: FolderName, FolderId: FolderId, ProjectId: ProjectId },
                success: function (rps) {
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("loadListFolderByProjectId","Home")",
                        data: { id: ProjectId },
                        success: function (rps) {
                            $(".working-left-top").html(rps);
                        }
                    });
                    var modalAddFolder = document.getElementById('ModalAddFolder');
                    modalAddFolder.style.display = "none";
                }
            });
        }
    </script>
}