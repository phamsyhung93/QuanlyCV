                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="@Url.Action("CreateProject","Home")" method="post">
                    <div class="form-group">
                        <label style="float: left;" for="recipient-name" class="col-form-label">Tên Công Việc</label>
                        <input type="text" class="form-control" name="ProjectName" id="ProjectName" required>
                    </div>
                    <div class="form-group">
                        <label style="float: left;" for="recipient-name" class="col-form-label">Phòng Ban và Người Nhận</label>
                        <br />
                        <div class="sub-form-group">
                            @foreach (var lstDepartment in ViewBag.listDepartment)
                            {
                            <ul>
                                <li>
                                    <input class="parent" id="DepartmentId" type="checkbox" name="DepartmentId" value="@lstDepartment.DepartmentId" checked="checked" />@lstDepartment.DepartmentName
                                    <div class="phong-@lstDepartment.DepartmentId" id="lstEmployeeByDepartment">
                                        <ul class="sub-parent" id="sub-parent">
                                            @foreach (var lstEmployee in ViewBag.lstEmployeeByDepartmentId)
                                                {
                                                    if (lstEmployee.DepartmentId == lstDepartment.DepartmentId)
                                                    {
                                                <li>
                                                    <input type="checkbox" name="EmployeeId" value="@lstEmployee.EmployeeId" />@lstEmployee.EmployeeFullname
                                                </li>
                                                    }
                                                }
                                        </ul>
                                    </div>
                                </li>
                            </ul>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="float: left;" for="recipient-name" class="col-form-label">Mô Tả Ngắn</label>
                        <textarea class="form-control" name="ProjectDescription" id="ProjectDescription" required></textarea>
                    </div>
                    <div class="form-group">
                        <label style="float: left;" for="recipient-name" class="col-form-label">Loại Công Việc</label>
                        <select name="ProjectTypeId" id="ProjectTypeId" class="form-control" required="required">
                            <option value=""></option>
                            <option value="2">dự án</option>
                            <option value="1">công việc thường</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label style="float: left;" for="message-text" class="col-form-label" min="31-12-1970">Thời Gian Bắt đầu</label>
                        <input type="date" class="form-control" id="StartTime" name="StartTime" required>
                    </div>
                    <div class="form-group">
                        <label style="float: left;" for="message-text" class="col-form-label" min="31-12-1970">Thời Gian Kết Thúc</label>
                        <input type="date" class="form-control" id="EndTime" name="EndTime" required>
                    </div>
                    <div class="form-group">
                        <label style="float: left;" for="message-text" class="col-form-label">Trạng Thái</label>
                        <select class="form-control" id="ProjectStatus" name="ProjectStatus" required>
                            <option></option>
                            <option value="1">Hiển Thị</option>
                            <option value="2">Không Hiển Thị</option>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" style=" width 80px;">Đóng</button>
                        <input type="submit" class="btn btn-primary" value="Thêm" style="background-color: green;" />
                    </div>
