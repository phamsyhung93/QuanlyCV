
@{
    ViewBag.Title = "ViewChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-grid">
    <div class="agile-grids">
        <!-- input-forms -->
        <div class="grids">
            <div class="progressbar-heading grids-heading">
                <h2>Thay Đổi Mật Khẩu</h2>
            </div>
            <div class="panel panel-widget forms-panel">
                <div class="forms">
                    <div class="form-grids widget-shadow" data-example-id="basic-forms">
                        <div class="form-title">
                            <h4>Thay Đổi Mật Khẩu :</h4>
                            <h5 style="color:darkred">@TempData["error"]</h5>
                        </div>
                        <div class="form-body">
                            <form action="@Url.Action("ChangePassword","Infomation")" method="post">
                                <input type="hidden" name="EmployeeId" id="EmployeeId" value="@Session["EmployeeId"]" />
                                <div class="form-group">
                                    <label for="oldpassword">Mật khẩu cũ</label>
                                    <input type="password" name="EmployeePassword" class="form-control" id="EmployeePassword" placeholder="Mật khẩu cũ" required>
                                </div>
                                <div class="form-group">
                                    <label for="newpassword">Mật khẩu mới</label>
                                    <input type="password" name="newpassword" class="form-control" id="newpassword" placeholder="Mật khẩu mới" required>
                                </div>
                                <div class="form-group">
                                    <label for="repeatpassword">Mật khẩu mới</label>
                                    <input type="password" name="repeatpassword" class="form-control" id="repeatpassword" placeholder="Xác nhận mật khẩu" required>
                                </div>
                                <button type="submit" class="btn btn-default w3ls-button">Xác Nhận</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- //input-forms -->
    </div>
</div>

