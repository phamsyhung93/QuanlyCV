@model IEnumerable<QuanlyCV.Models.Department>
<div class="main-grid">
    <div class="agile-grids">
        <!-- input-forms -->
        <div class="grids">
            <div class="progressbar-heading grids-heading">
                <h2>Thêm Mới Phòng Ban</h2>
                <h4 style="color:darkred">@TempData["error"]</h4>
            </div>
            <div class="panel panel-widget forms-panel">
                <a onclick="backCreateDepartment(this)">Quay Lại</a>
                <div class="forms">
                    <div class="form-grids widget-shadow" data-example-id="basic-forms">
                        <div class="form-title">
                            <h4>Thêm Mới Phòng Ban</h4>
                        </div>
                        <div class="form-body">
                            <form action="" method="post" onsubmit="CreateDepartment(event)">
                                <div class="form-group">
                                    <label for="departmentname">Tên phòng ban</label>
                                    <input type="text" name="DepartmentName" class="form-control" id="DepartmentName" placeholder="Tên phòng ban" required>
                                </div>
                                <div class="form-group">
                                    <label for="parentdepartment">Phòng ban cha</label>
                                    <select name="DepartmentId" id="DepartmentId" class="form-control" required>
                                        <option value="0">Không có</option>
                                        @foreach (var item in Model)
                                        {
                                            <option value="@item.DepartmentId">@item.DepartmentName</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="departmentstatus">Trạng thái</label>
                                    <select name="DepartmentStatus" id="DepartmentStatus" class="form-control" required>
                                        <option value="1">Hiển Thị</option>
                                        <option value="2">Không Hiển Thị</option>
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-default w3ls-button">Xác Nhận</button>
                                <button type="reset" class="btn btn-default w3ls-button">Làm lại</button>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- //input-forms -->
    </div>
</div>



