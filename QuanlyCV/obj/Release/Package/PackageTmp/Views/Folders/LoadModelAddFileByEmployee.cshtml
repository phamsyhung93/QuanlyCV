@model QuanlyCV.Models.Folder
<form action="@Url.Action("addFolderByEmployee","Folders")" method="post" onsubmit="addfileByEmployee(event)" enctype="multipart/form-data">
    <div class="div-title-modal-add-folder">
        <span><b>File</b></span>
        <input class="input-div-title-modal-add-folder" type="file" name="files" id="files" />
    </div>
    <div class="div-title-modal-add-folder">
        <span><b>Tên Folder Chứa</b></span>
        <input class="input-div-title-modal-add-folder" disabled type="text" name="" id="" value="@Model.FolderName" />
        <input class="input-div-title-modal-add-folder" type="hidden" name="FolderId" id="FolderId" value="@Model.FolderId" />
    </div>
    <input type="submit" value="Thêm" class="input-modal-add-folder">
</form>
